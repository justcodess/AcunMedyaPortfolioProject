@model AcunMedyaPortfolioProject.Models.Testimonial

@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Yazısını Güncelleme Sayfası</h2>
<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.Id)
        <label>Ad Soyad</label>
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
        <br />
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>Fotoğraf Url</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        <br />
        <label>Yorum</label>
        @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
        <br />


        <button class="btn btn-info ">Referans Yazısını Güncelle</button>
    </form>

</div>

