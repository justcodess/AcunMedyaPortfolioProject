@model AcunMedyaPortfolioProject.Models.About
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Ekleme Sayfası</h2>

<div class="container">
    <form method="post">
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>Açıklama</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        <br />
        <label>Fotoğraf Url</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        <br />
        <label>CV Linki</label>
        @Html.TextBoxFor(x => x.CVLink, new { @class = "form-control" })
        <br />
        <button class="btn btn-info ">Hakkımdayı Kaydet</button>
    </form>

</div>

