@model List<AcunMedyaPortfolioProject.Models.About>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Fotoğraf Url</th>
                <th>Cv Linki</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var about in Model)
            {
                <tr>
                    <td>@about.Id</td>
                    <td>@about.Title</td>
                    <td>@about.Description</td>
                    <td><img src="@about.ImageUrl" /></td>
                    <td>@about.CVLink</td>
                    <td><a href="/About/UpdateAbout/@about.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/About/DeleteAbout/@about.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/About/CreateAbout" class="btn btn-primary">Yeni Hakkımda Yazısı Ekle</a>

</div>

