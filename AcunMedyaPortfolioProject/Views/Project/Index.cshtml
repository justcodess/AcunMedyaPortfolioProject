W@model List<AcunMedyaPortfolioProject.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Project List</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Proje İsmi</th>
                <th>Kategori</th>
                <th>Kapak Resmi</th>
                <th>Açıklama</th>
                <th>Proje</th>
                <th>Güncelle</th>
                <th>Kaldır</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Id</td>
                    <td>@project.Name</td>
                    <td>@project.Category.Name </td> 
                    <td><img src="@project.CoverImageUrl" alt=" @project.Name" /></td>
                    <td>@project.Description</td>

                    <td>@project.ProjectLink</td>
                    <td><a href="/Project/UpdateProject/@project.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Project/DeleteProject/@project.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Project/CreateProject" class="btn btn-primary">Yeni Project Ekle</a>

</div>
